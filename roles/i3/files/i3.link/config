# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +2% # && dunstify -r 991049 -u low 'Volume:' $(~/.scripts/volume/volume) # pkill -RTMIN+10 i3blocks #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -2% # && dunstify -r 991049 -u low 'Volume:' $(~/.scripts/volume/volume) # pkill -RTMIN+10 i3blocks #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # && dunstify -r 991049 -u low 'Volume:' $(~/.scripts/volume/volume) # && pkill -RTMIN+10 i3blocks # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 5 # && dunstify -r 991048 -u low 'Brightness:' $(xbacklight -get | awk '{print int($1)}') # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 5 # && dunstify -r 991048 -u low 'Brightness:' $(xbacklight -get | awk '{print int($1)}') # decrease screen brightness

# Touchpad controls
